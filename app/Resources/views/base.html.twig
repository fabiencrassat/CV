{# app/Resources/views/base.html.twig #}

{% extends "OryzoneBoilerplateBundle::html5.html.twig" %}

{% block head %}
  {{ parent() }}
  <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
{% endblock %}

{% block head_title %}Crassat Site{% endblock %}

{% block head_meta %}
  {{ parent() }}
  <meta name="robots" content="{% if _robotindex is defined %}{{ _robotindex }}{% else %}noindex{% endif %},nofollow" />
{% endblock %}

{% block head_css %}
  {{ parent() }}
  {% stylesheets filter='?yui_css' combine=true '@bootstrap_css' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}">
  {% endstylesheets %}
  {% stylesheets filter='cssrewrite,?yui_css' combine=true '@base_css' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}">
  {% endstylesheets %}
{% endblock %}

{% set bp_body_attributes = "data-spy='scroll' data-target='.navbar'" %}

{% block body_js %}
  {{ parent() }}
  {% javascripts '@bootstrap_js' filter='?yui_js' combine=true %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}
