{# app/Resources/views/base.html.twig #}

<!DOCTYPE html>
<html>
    <head>
{# meta #}
        <meta http-equiv="Content-Type" content="text/html; charset={% if _charset is defined %}{{ _charset }}{% else %}utf-8{% endif %}"/>
        <meta name="robots" content="noindex,nofollow" />
        <meta charset="{% if _charset is defined %}{{ _charset }}{% else %}UTF-8{% endif %}" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
{# title #}
        <title>{% block title %}Crassat Site{% endblock %}</title>
{# icon #}
{% block favicon %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
{% endblock %}
{# stylesheets #}
{% stylesheets filter='?yui_css' combine=true '@bootstrap_css' %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}">
{% endstylesheets %}
{% stylesheets filter='cssrewrite,?yui_css' combine=true '@base_css' %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}">
{% endstylesheets %}
{% block stylesheets %}{% endblock %}
{# javascripts #}
{% javascripts '../vendor/jquery/jquery/jquery-1.9.1.min.js' '@bootstrap_js' filter='?yui_js' combine=true %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% block javascripts %}{% endblock %}
{# extension #}
{% block head %}{% endblock %}
    </head>

    <body data-spy="scroll" data-target=".navbar">
        {% block body %}
            Hello!
        {% endblock %}
    </body>

</html>