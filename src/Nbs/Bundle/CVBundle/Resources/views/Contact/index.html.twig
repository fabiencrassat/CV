{% extends "NbsCVBundle::contact.html.twig" %}

{% trans_default_domain 'MremiContactBundle' %}

{% form_theme form 'MremiContactBundle:Contact:bootstrap_form_theme.html.twig' %}

{% block head_title %}{{ 'mremi_contact.form_page_title'|trans }}{% endblock %}

{% block contactbody %}
    <section class="well well-large" style="margin-top:20px;">
    {% set novalidate = app.debug and app.request.get('novalidate') %}
    {% set form_attr = {
        'class': 'form-horizontal',
        'role':  'form'
    } %}

    {% if novalidate %}
        {{ form_start(form, {
            'action': path('mremi_contact_form', {'novalidate': 1}),
            'attr':   form_attr|merge({'novalidate': 'novalidate'})
        }) }}
    {% else %}
        {{ form_start(form, {
            'action': path('mremi_contact_form'),
            'attr':   form_attr
        }) }}
    {% endif %}
        <fieldset>
            <legend>{{ 'mremi_contact.form_title'|trans }}</legend>

            {{ form_widget(form) }}
        </fieldset>
    {{ form_end(form) }}

    <a href="{{ path('nbs_cv_local', {_locale:app.request.locale}) }}" class="btn btn-default">
        <span class="glyphicon glyphicon-chevron-left"></span> {{ 'Nbs_contact.back_button'|trans({}, 'NbsCVBundle') }}
    </a>
    </section>
{% endblock contactbody %}
